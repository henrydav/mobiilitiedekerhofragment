<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollableVideoList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:focusable="false"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_marginTop="-15dp"
        android:fillViewport="true"
        android:layoutMode="opticalBounds"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="150dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:text="PYSTYVIDEO"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scrollIndicators="right"
            android:visibility="visible"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:background="#fd0101"
            android:layout_margin="7dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:text="VAAKAVIDEO"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scrollIndicators="right"
            android:visibility="visible"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:background="#fdd301"
            android:layout_margin="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image3"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scrollIndicators="right"
            android:visibility="visible"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:background="#2ffd01"
            android:layout_margin="7dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image4"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scrollIndicators="right"
            android:visibility="visible"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:background="#01f5fd"
            android:layout_margin="7dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image5"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scrollIndicators="right"
            android:visibility="visible"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:background="#0123fd"
            android:layout_margin="7dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image6"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scrollIndicators="right"
            android:visibility="visible"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:background="#e801fd"
            android:layout_margin="7dp"/>

    </LinearLayout>
    </HorizontalScrollView>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/viewTaskVideo"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="10dp" />
</RelativeLayout>